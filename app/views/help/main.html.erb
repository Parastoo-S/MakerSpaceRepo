    </div>

  </div>

  <div class="container">
    <div class="col">
      <div class="category">User Accounts</div>
        <ul class="fa-ul">
          <li><%= link_to fa_icon("angle-double-right li", text: ' Changing your password'), "#" %></li>
          <li><%= link_to fa_icon("angle-double-right li", text: ' How do I reset my password?'), "#" %></li>
