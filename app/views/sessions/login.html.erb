<section id="login">

  <% if flash[:alert] %>
    <div id="alert"><%= flash[:alert] %></div>
  <% end %>

  <div class="login-title">Sign In</div>

  <%= form_for @user, url: {controller: 'sessions', action: 'login_authentication'} do |f| %>

    <%= f.text_field :username, placeholder: 'Username or Email' %>     
    <%= f.password_field :password, placeholder: 'Password' %> 
    
    <%= f.submit "Sign In", class: 'login-button' %>
  
  <% end %>

  <%= link_to "Forgot your password?", forgot_password_path, class: "forgot-password" %>

</section>