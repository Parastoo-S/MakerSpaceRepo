<section id="login">

  <% if flash[:alert] %>
    <div id="alert"><%= flash[:alert] %></div>
  <% end %>

  <div class="login-title">Sign In</div>

  <%= form_tag login_authentication_path do %>

    <%= text_field_tag :username_email, nil, placeholder: 'Username or Email', value: @placeholder %>     
    <%= password_field_tag :password, nil, placeholder: 'Password' %> 
    
    <%= submit_tag "Sign In", class: 'login-button', 'tab-index': "3" %>
  
  <% end %>

  <%= link_to "Forgot your password?", forgot_password_path, class: "forgot-password" %>

</section>