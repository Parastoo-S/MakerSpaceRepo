<section id="header">
  <% unless signed_in? %>
    <span class="header-menu-item not-signed-in"><%= link_to 'Sign Up', new_user_path %></span>
    <span class="header-menu-item not-signed-in"><%= link_to 'Log In', login_path %></span>
  <% else %>
    <span class="header-menu-item"><%= link_to 'Log Out', logout_path %></span>
    <span class="header-menu-item"><%= link_to 'Settings', edit_user_path(@user) %></span>
    <span class="header-menu-item"><%= link_to 'Create New Repo', new_user_repository_path(user_id: @user.id) %></span>
    <span class="header-menu-item">
      <%= link_to user_path(@user) do %>
      <%= image_tag @user.avatar.url, class: 'main-avatar-thumbnail', alt: 'Avatar' %> 
      <%= @user.username %>
      <% end %>
    </span>
  <% end %>
  <span class="msr-logo">
    <%= link_to root_path do %>MakerSpace<b>Repo</b><% end %>
  </span>
</section>

