<section id="signup">
  
  <div class="signup-title">Create your personal account</div>

  <%= form_for @new_user do |f| %>

    <%= f.label :first_name, "First Name" %>
    <%= content_tag :span, @new_user.errors[:first_name].first, class: 'form-error' %>
    <%= f.text_field :first_name, autofocus: true %>

    <%= f.label :last_name, "Last Name" %>
    <%= content_tag :span, @new_user.errors[:last_name].first, class: 'form-error' %>
    <%= f.text_field :last_name %>

    <%= f.label :email %>
    <%= content_tag :span, @new_user.errors[:email].first, class: 'form-error' %>
    <u>You will occasionally receive account related emails. 
    We promise not to share your email with anyone.</u>
    <%= f.email_field :email %>     

    <%= f.label :username %>
    <%= content_tag :span, @new_user.errors[:username].first, class: 'form-error' %>
    <%= f.text_field :username %>      

    <%= f.label :password %>
    <%= content_tag :span, @new_user.errors[:password][0], class: 'form-error' %>
    <%= content_tag :span, @new_user.errors[:password][1], class: 'form-error', 
        style: 'display: block;' if @new_user.errors[:password][1] %>
    <u>Use at least one uppercase letter, one lowercase letter, 
      one numeral and eight characters</u>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= content_tag :span, @new_user.errors[:password_confirmation][0], class: 'form-error' %>
    <%= content_tag :span, @new_user.errors[:password][1], class: 'form-error', 
        style: 'display: block;' if @new_user.errors[:password][1] %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Create Account", class: 'signup-button' %>
  
  <% end %>

</section>